<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/navbar'); %>

    <div class="container-fluid">
      <div class="row">
        <%- include('../partials/sidebar'); %>

          <main role="main" class="col-md-9 ms-sm-auto col-lg-10 pt-3 px-4">
            <div
              class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
              <h1 class="h2">Add History Data</h1>
            </div>

            <form method="POST" action="/game/history/create">
              <div class="mb-3">
                <label class="form-label">User Name</label>
                <!-- <input type="number" name="userName" min="1" class="form-control" /> -->
                <select class="form-select" data-style="btn-info" name="username">
                  <optgroup label="Select UserName">
                    <!-- <option value="">Select UserName</option> -->
                    <% userList.forEach(function(userList){ %>
                      <option value="<%= userList.username %>">
                        <%= userList.username %>
                      </option>
                      <% }) %>
                  </optgroup>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Score</label>
                <input type="number" name="score" min="10" max="100" class="form-control" />
              </div>

              <button type="submit" class="btn btn-success">Saved</button>
            </form>
          </main>
      </div>
    </div>

    <%- include('../partials/script'); %>
</body>

</html>