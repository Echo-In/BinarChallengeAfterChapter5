<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/navbar'); %>

        <div class="container-fluid">
            <div class="row">
                <%- include('../partials/sidebar'); %>

                    <main role="main" class="col-md-9 ms-sm-auto col-lg-10 pt-3 px-4">
                        <div
                            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                            <h1 class="h2">Game History</h1>
                        </div>
                        <a href="/game/history/add">
                            <button type="button" class="btn btn-primary mb-3">
                                <span data-feather="plus"></span>
                                Add New History
                            </button>
                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Played At</th>
                                        <th scope="col">Score Result</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% histories.forEach((history)=> { %>
                                        <tr>
                                            <td>
                                                <%= history.user_game.username %>
                                            </td>
                                            <td>
                                                <%= history.played_at %>
                                            </td>
                                            <td>
                                                <%= history.score_result %>
                                            </td>

                                            <td>
                                                <a href="/game/history/edit/<%= history.id %>">
                                                    <button type="button" class="btn btn-warning mb-3">
                                                        Edit
                                                    </button>
                                                </a>

                                                <a href="/game/history/delete/<%= history.id %>">
                                                    <button type="button" class="btn btn-danger mb-3">
                                                        Delete
                                                    </button>
                                                </a>

                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </main>
            </div>
        </div>

        <%- include('../partials/script'); %>
</body>

</html>